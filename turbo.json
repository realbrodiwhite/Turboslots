{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", "public/**"] // Common output directories
    },
    "build:client": {
      "dependsOn": ["^build"],
      "outputs": ["client/build/**"] // The React app's build directory
    },
    "build:server": {
      "outputs": ["server/dist/**"] // The server's build directory
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": [] // Tests generally have no outputs
    },
    "lint": {
      "outputs": [] // Lint generally has no outputs
    }
  }
}
