  {
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
      "start": {
        "dependsOn": ["start"]
      },
      "run": {
        "dependsOn": ["^run"],
        "outputs": ["run/**"]
      },
      "run:client": {
        "dependsOn": ["^run"],
        "outputs": ["run/**"]
      },
      "run:server":  {
        "dependsOn": ["^run"],
        "outputs": ["run/**"]
      },
      "build:client": {
          "dependsOn": ["^build"],
          "outputs": ["dist/**", "build/**", "public/**"]
        },
        "build:server": {
          "dependsOn": ["^build"],
          "outputs": ["server/build/**", "server/public/**"]
        },
        "test": {
          "dependsOn": ["^build"],
          "outputs": []
        },
        "lint": {
          "outputs": []
        }
      }
    }